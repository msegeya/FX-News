<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="132dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background = "@color/white"
        android:layout_height = "match_parent"
        android:layout_width = "match_parent"
        card_view:cardCornerRadius="1dp"

        >
        <LinearLayout
            android:layout_height = "match_parent"
            android:layout_width = "match_parent"
            android:orientation = "vertical"
            >
            <RelativeLayout
                android:layout_height="84dp"
                android:layout_width="match_parent"
                >


                <TextView
                    android:layout_width="50dp"
                    android:background="@drawable/impact_circle"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:layout_marginTop = "16dp"
                    android:layout_marginBottom = "16dp"
                    android:layout_marginLeft = "10dp"
                    android:layout_marginRight = "10dp"
                    android:textColor= "@color/white"
                    android:textSize = "12dp"
                    android:text="New Text"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/list_item_impact_textview" />

                <LinearLayout
                    android:layout_width = "220dp"
                    android:layout_height = "match_parent"
                    android:layout_toRightOf="@+id/list_item_impact_textview"
                    android:id = "@+id/list_name_layout"
                    android:orientation = "vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingRight="15dp"
                        android:gravity="bottom"
                        android:text="Name"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="16dp"
                        android:layout_weight = "1"
                        android:textColor="@color/black"
                        android:id="@+id/list_item_name_textview"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight = "1"
                        android:textSize="12dp"
                        android:text = "9:30"
                        android:textColor="@color/grey"
                        android:id="@+id/list_item_time_textview"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width = "wrap_content"
                        android:layout_height = "match_parent"
                        android:layout_toRightOf="@+id/list_name_layout"
                        android:layout_alignParentRight="true"

                        android:orientation = "vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/dark_grey"
                            android:paddingRight="15dp"
                            android:gravity="bottom|right"
                            android:text = "USD"
                            android:id="@+id/list_item_currency_textview"
                        android:textSize="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_toRightOf="@+id/list_name_layout"
                            android:layout_height="0dp"
                            android:layout_weight="1"

                            android:textSize="12dp"/>
                    </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>


            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "48dp"
                android:paddingBottom="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation = "horizontal">
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Actual"
                    android:gravity="center_vertical"
                    android:textColor="@color/dark_grey"

                    android:textSize="10dp"
                    android:id="@+id/list_item_actual_textview"/>
                <TextView
                    android:textColor="@color/dark_grey"
                    android:gravity="center"
                    android:text="Forecast"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:id="@+id/list_item_forecast_textview"/>
                <TextView

                    android:gravity="center_vertical|right"
                    android:text="Previous"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:textColor="@color/dark_grey"
                    android:layout_height="match_parent"
                    android:id="@+id/list_item_previous_textview"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft = "10dp"
                android:gravity = "center"
                android:orientation="vertical">


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>